{% extends 'CCDNUserAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_admin.role.set_users_role.layout_template %}

{% block title %}{{- truncDot('title.account.set_roles' |trans({'%name%':user.username}, 'CCDNUserAdminBundle'), ccdn_user_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_admin.role.set_users_role.form_theme -%}
		<form action="{{- path('ccdn_user_admin_set_roles', {'userId': user.id }) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'title.account.set_roles' |trans({'%name%': '<bdi>' ~ user.getUsername ~ '</bdi>'}, 'CCDNUserAdminBundle') |raw -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-actions">
			        <input type="submit" name="submit[save]" class="btn btn-danger" value="{{- 'form.button.update'|trans({}, 'CCDNUserAdminBundle') -}}">

					<a class="btn" href="{{- path('ccdn_user_admin_account_show', {'userId':user.id}) -}}">
						{{- 'form.button.cancel' |trans({}, 'CCDNUserAdminBundle') -}}
					</a>
				</div>

			</fieldset>
		</form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
