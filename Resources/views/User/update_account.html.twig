{% extends 'CCDNUserAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_admin.account.edit_user_account.layout_template %}

{% block title %}{{- truncDot('ccdn_user_admin.title.account.edit' |trans({'%user_name%': user.getUsername}, 'CCDNUserAdminBundle'), ccdn_user_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_admin.account.edit_user_account.form_theme -%}
		<form action="{{- path('ccdn_user_admin_account_edit', {'userId': user.id}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'ccdn_user_admin.title.account.edit' |trans({'%user_name%': '<bdi>' ~ user.getUsername ~ '</bdi>'}, 'CCDNUserAdminBundle') |raw -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-actions">
					<input type="submit" name="submit[save]" class="btn btn-primary" value="{{- 'profile.edit.submit'|trans({}, 'FOSUserBundle') -}}">

					<a class="btn" href="{{- path('ccdn_user_admin_account_show', {'userId':user.id}) -}}">
						{{- 'ccdn_user_admin.form.button.cancel' |trans({}, 'CCDNUserAdminBundle') -}}
					</a>
				</div>

			</fieldset>
		</form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
