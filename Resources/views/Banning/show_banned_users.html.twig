{% extends 'CCDNUserAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_admin.ban.show_banned_users.layout_template %}

{% block title %}{{- truncDot('ccdn_user_admin.title.users.banned' | trans({}, 'CCDNUserAdminBundle'), ccdn_user_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<header>
		<h3>{{- 'ccdn_user_admin.title.users.banned' | trans({}, 'CCDNUserAdminBundle') -}}</h3>
	</header>

	<section>
		{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_user_admin_show_banned_paginated' }) -}}
				</nav>
			</div>
		{%- endif -%}

		<table class="table table-striped table-bordered table-condensed table-hover table-no-vertical-borders">
			<thead>
				<tr>
					<th class="left">{{- 'ccdn_user_admin.users.table.head.username' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="left">{{- 'ccdn_user_admin.users.table.head.email' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="center">{{- 'ccdn_user_admin.users.table.head.joined_date' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="center">{{- 'ccdn_user_admin.users.table.head.activation_status' | trans({}, 'CCDNUserAdminBundle') -}}</th>
				</tr>
			</thead>
			<tbody>
				{%- for row, user in users -%}
					<tr>
						<td class="left">
							<a href="{{- path('ccdn_user_admin_account_show', {'userId': user.getId }) -}}">
								<bdi>{{- user.username |capitalize -}}</bdi>
							</a>
						</td>
						<td class="left">{{- user.email -}}</td>
						<td class="center">{{- user.registeredDate |date(ccdn_user_admin.ban.show_banned_users.member_since_datetime_format) -}}</td>
						<td class="center">
							{%- if user.enabled -%}
								Activated
							{%- else -%}
								Pending Activation
							{%- endif -%}
						</td>
					</tr>
				{%- else -%}
					<tr>
						<td class="center" colspan="4">
							{{- 'ccdn_user_admin.users.banned.table.empty' | trans({}, 'CCDNUserAdminBundle') -}}
						</td>
					</tr>
				{%- endfor -%}
			</tbody>
		</table>

		{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_user_admin_show_banned_paginated' }) -}}
				</nav>
			</div>
		{%- endif -%}
	</section>
	
	{%- endspaceless -%}

{% endblock body_content %}
