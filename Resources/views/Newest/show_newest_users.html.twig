{% extends 'CCDNUserAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_admin.account.show_newest_users.layout_template %}

{% block title %}{{- truncDot('title.user.newest' | trans({}, 'CCDNUserAdminBundle'), ccdn_user_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<header>
		<h3>{{- 'title.user.newest' | trans({}, 'CCDNUserAdminBundle') -}}</h3>
	</header>

	<section>
		{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_user_admin_show_newest_paginated' }) -}}
				</nav>
			</div>
		{%- endif -%}

		<table class="table table-striped table-condensed table-hover">
			<thead>
				<tr>
					<th class="left">{{- 'generic.thead.username' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="left">{{- 'generic.thead.email' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="center">{{- 'generic.thead.member_since' | trans({}, 'CCDNUserAdminBundle') -}}</th>
					<th class="center">{{- 'generic.thead.activation_status' | trans({}, 'CCDNUserAdminBundle') -}}</th>
				</tr>
			</thead>
			<tbody>
				{%- for row, user in users -%}
					<tr>
						<td class="left">
							<a href="{{- path('ccdn_user_admin_account_show', {'userId': user.getId }) -}}">
								<bdi>{{- user.username |capitalize -}}</bdi>
							</a>
						</td>
						<td class="left">{{- user.email -}}</td>
						<td class="center">{{- user.registeredDate |date(ccdn_user_admin.account.show_newest_users.member_since_datetime_format) -}}</td>
						<td class="center">
							{%- if user.enabled -%}
								{{- 'generic.thead.activated.yes' |trans({}, 'CCDNUserAdminBundle') -}}
							{%- else -%}
								{{- 'generic.thead.activated.no' |trans({}, 'CCDNUserAdminBundle') -}}
							{%- endif -%}
						</td>
					</tr>
				{%- else -%}
					<tr>
						<td class="center" colspan="4">
							{{- 'generic.user.none' | trans({}, 'CCDNUserAdminBundle') -}}
						</td>
					</tr>
				{%- endfor -%}
			</tbody>
		</table>

		{%- if pager.haveToPaginate -%}
			<div class="btn-toolbar">
				<nav class="span12 btn-right paginate">
			    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_user_admin_show_newest_paginated' }) -}}
				</nav>
			</div>
		{%- endif -%}
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
