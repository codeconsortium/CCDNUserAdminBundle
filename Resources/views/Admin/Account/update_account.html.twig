{% extends 'CCDNUserAdminBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_user_admin.account.edit_user_account.layout_template %}

{% block title %}{{- 'title.account.edit' |trans({'%name%': user.getUsername}, 'CCDNUserAdminBundle') |slice(0, ccdn_user_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_admin.account.edit_user_account.form_theme -%}
		<form action="{{- path('ccdn_user_admin_account_edit', {'userId': user.id}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<h4>{{- 'title.account.edit' |trans({'%name%': '<bdi>' ~ user.getUsername ~ '</bdi>'}, 'CCDNUserAdminBundle') |raw -}}</h4>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<button type="submit" class="btn btn-primary" id="submit[post]" name="submit[post]">
							{{- 'form.button.update'|trans({}, 'CCDNUserAdminBundle') -}}
						</button>

						<a href="{{- path('ccdn_user_admin_account_show', {'userId':user.id}) -}}" class="btn btn-default">
							{{- 'form.button.cancel' |trans({}, 'CCDNUserAdminBundle') -}}
						</a>
					</div>
				</div>
			</fieldset>
		</form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
