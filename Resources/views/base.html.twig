{% extends LayoutTemplate %}



{% block stylesheets %}
    {{ parent() }}
	{% block stylesheets_extra %}
	{% endblock stylesheets_extra %}
{% endblock stylesheets %}



{% block javascripts %}
	{{ parent() }}
	{% block javascripts_extra %}
	{% endblock javascripts_extra %}
{% endblock javascripts %}



{% block tool_bar %}
	<div id="sub-nav" class="row-fluid">
	    <div class="span2">
			<h3>
				{% block sub_title %}
					<a href="{{ path('ccdn_user_admin_show_newest') }}">
						User Admin
					</a>
				{% endblock sub_title %}
			</h3>
		</div>
				
		<nav class="span10">
			{%- block crumb_trail -%}
				{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}
			{%- endblock crumb_trail -%}
		</nav>
	</div>	
{% endblock tool_bar %}



{% block sidebar %}
    {{ parent() }}

	{%- block sidebar_extra_top -%}{%- endblock sidebar_extra_top -%}
    {%- include 'CCDNUserAdminBundle:Sidebar:sidebar.html.twig' -%}
	{%- block sidebar_extra_bottom -%}{%- endblock sidebar_extra_bottom -%}

{% endblock %}



{% block body %}
	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- block body_content -%}
	{%- endblock body_content -%}

	{%- block body_footer -%}
		{%- include 'CCDNUserAdminBundle:Footer:footer.html.twig' -%}
	{%- endblock body_footer -%}

	{%- endspaceless -%}
{% endblock body %}